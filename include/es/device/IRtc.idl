#ifndef NINTENDO_ES_DEVICE_IRTC_IDL_INCLUDED
#define NINTENDO_ES_DEVICE_IRTC_IDL_INCLUDED

#include "es/base/IInterface.idl"

module es
{
    /**
     * This interface provides methods for managing a RTC (Real Time Clock).
     */
    interface Rtc : Interface
    {
        #pragma ID Rtc = "DCE:83aaaf0c-25dc-11db-9c02-0009bf000001";

        /** the current time in 100-nanosecond units since midnight of Jan 1, 0001.
         */
        attribute long long time;
    };
};

